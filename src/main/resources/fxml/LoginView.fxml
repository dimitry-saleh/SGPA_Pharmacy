<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.pharmacy.sgpa.controller.LoginController"
           stylesheets="@../css/styles.css"
           styleClass="login-root">

    <VBox alignment="CENTER">
        <VBox spacing="25" alignment="CENTER" maxWidth="420" styleClass="login-card">
            <padding><Insets top="50" right="45" bottom="50" left="45"/></padding>

            <VBox alignment="CENTER" spacing="10">
                <StackPane styleClass="icon-bg-teal" maxWidth="60" maxHeight="60">
                    <SVGPath content="M19 3H5c-1.1 0-1.99.9-1.99 2L3 19c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-2 11h-4v4h-2v-4H7v-2h4V7h2v5h4v2z"
                             fill="#009688" scaleX="1.5" scaleY="1.5"/>
                </StackPane>
                <VBox alignment="CENTER">
                    <Label text="SGPA PHARMA" styleClass="login-logo-text"/>
                    <Label text="Système de Gestion Pharmaceutique" styleClass="login-subtitle"/>
                </VBox>
            </VBox>

            <VBox spacing="18">
                <VBox spacing="8">
                    <Label text="NOM D'UTILISATEUR" styleClass="field-label-bright"/>
                    <HBox fx:id="userInputGroup" styleClass="input-group">
                        <StackPane prefWidth="35">
                            <SVGPath content="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" fill="#90A4AE" scaleX="0.8" scaleY="0.8"/>
                        </StackPane>
                        <TextField fx:id="txtUser" promptText="Identifiant" styleClass="login-input" HBox.hgrow="ALWAYS"/>
                    </HBox>
                </VBox>

                <VBox spacing="8">
                    <Label text="MOT DE PASSE" styleClass="field-label-bright"/>
                    <HBox fx:id="passInputGroup" styleClass="input-group">
                        <StackPane prefWidth="35">
                            <SVGPath content="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zm-6 9c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zm3.1-9H8.9V6c0-1.71 1.39-3.1 3.1-3.1 1.71 0 3.1 1.39 3.1 3.1v2z" fill="#90A4AE" scaleX="0.8" scaleY="0.8"/>
                        </StackPane>
                        <PasswordField fx:id="txtPass" promptText="••••••••" styleClass="login-input" HBox.hgrow="ALWAYS"/>
                    </HBox>
                </VBox>
            </VBox>

            <Button text="CONNEXION SÉCURISÉE" maxWidth="Infinity" onAction="#handleLogin"
                    styleClass="btn-login" prefHeight="45"/>

            <Label fx:id="lblError" styleClass="error-text" wrapText="true" alignment="CENTER"/>

            <Label text="© 2026 SGPA System - v2.1.0" styleClass="footer-text"/>
        </VBox>
    </VBox>
</StackPane>